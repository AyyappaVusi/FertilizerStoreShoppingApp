<div id="<%= dom_id store %>">
<% if store.fertilizer_image.attached? %>
<%= image_tag store.fertilizer_image,height:"150",width:"150" %>
<% end %>
  <p>
    <strong>Name:</strong>
    <%= store.name %>
  </p>

  <p>
    <strong>Fertilizer type:</strong>
    <%= store.fertilizer_type %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= store.price %>
  </p>

  <p>
    <strong>Nutrient value:</strong>
    <%= store.nutrient_value %>
  </p>

</div>
